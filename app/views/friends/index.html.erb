<% if user_signed_in? %>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
      </tr>
    </thead>
    
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td>
              <%= link_to friend.first_name + " " +friend.last_name, friend %>
            </td>
            <td><%= friend.email%></td>
            <td><%= friend.phone%></td>
            <td><%= friend.twitter%></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary"%>

<% else %>

  <div class="card">
  <h5 class="card-header">Hello World!</h5>
  <div class="card-body">
    <h5 class="card-title"> Welcome to The Friends App!
</h5>
    <p class="card-text">Connect with the ones you love.</p>
          <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-primary" %>

          <%= link_to 'Sign In', new_user_session_path, class: "btn btn-secondary" %>
  </div>
</div>


<% end %>